<%= form_for(@profissional) do |f| %>
  <% if @profissional.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@profissional.errors.count, "error") %> impediu esta crença de ser salva:</h2>

      <ul>
      <% @profissional.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <form class="form-horizontal">
    <div class="field form-group">
      Nome completo
      <%= f.text_field :nome_completo, :class => 'form-control', :required => true %>
    </div>
    <div class="field form-group">
      Nome comercial
      <%= f.text_field :nome_comercial, :class => 'form-control' %>
    </div>
    <div class="field form-group">
      Whatsapp
      <%= f.number_field :whatsapp, :class => 'form-control' %>
    </div>
    <div class="field form-group">
      Celular
      <%= f.number_field :celular, :class => 'form-control' %>
    </div>
    <div class="field form-group">
      E-mail
      <%= f.text_field :email, :class => 'form-control' %>
    </div>
    <div class="field form-group">
      Endereço
      <%= f.text_area :endereco, :class => 'form-control' %>
    </div>
    <div class="actions">
      <%= button_tag(type: 'submit', class: "btn btn-sm btn-primary", title: 'Salvar') do %>
      <i class="fa fa-save"></i>
      <% end %>
    </div>
  </form>
<% end %>
