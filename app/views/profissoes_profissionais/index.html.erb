<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <div class="row">
            <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1 ">
              <h4><%= link_to '', new_profissoes_profissional_path, :class => 'btn btn-primary fa fa-plus', :title => 'Nova crença' %></h4>
            </div>
            <div class="col-xs-11 col-sm-11 col-md-11 col-lg-11 ">
              <div style="text-align:center">
                <h2>Profissões dos Profissionais <span class="badge badge-info"><%= @profissoes_profissionais.count %></span></h2>
              </div>
            </div>
          </div>
        </div>
        <div class="ibox-content">
          <p id="notice">
            <center class="alert-info">
              <%= notice %> 
            </center>
          </p>
          <table class="table table-hover">
            <thead class="table table-bordered">
              <tr>
                <th>Profissional</th>
                <th>Profissão</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody class="table table-hover">
              <% @profissoes_profissionais.each do |profissoes_profissional| %>
                <tr>
                  <td><%= Profissional.find(profissoes_profissional.profissional_id).nome_completo %></td>


                  <td><%= Profissao.find(profissoes_profissional.profissao_id).profissao if !profissoes_profissional.profissao_id.nil? %></td>



                  <td><%= link_to '', profissoes_profissional, :class => 'btn btn-primary fa fa-search', :title => 'Visualizar' %></td>
                  <td><%= link_to '', edit_profissoes_profissional_path(profissoes_profissional), :class => 'btn btn-warning fa fa-edit', :title => 'Editar' %></td>
                  <td><%= link_to '', profissoes_profissional, method: :delete, data: { confirm: 'Tem certeza?' }, :class => 'btn btn-danger fa fa-trash', :title => 'Deletar' %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>