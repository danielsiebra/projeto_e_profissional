<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <div class="row">
            <div class="col-xs-1 col-sm-1 col-md-1 col-lg-1 ">
              <h4><%= link_to '', new_profissao_path, :class => 'btn btn-primary fa fa-plus', :title => 'Cadastrar' %></h4>
            </div>
            <div class="col-xs-11 col-sm-11 col-md-11 col-lg-11 ">
              <div style="text-align:center">
                <h2>Profissões <span class="badge badge-info"><%= @profissoes.count %></span></h2>
              </div>
            </div>
          </div>
        </div>
        <div class="ibox-content">
          <p id="notice">
            <center class="alert-info">
              <%= notice %> 
            </center>
          </p>
          <table class="table table-hover">
            <thead class="table table-bordered">
                <tr>
                  <th>Área do profissional</th>
                  <th>Profissão</th>
                  <th colspan="3"></th>
                </tr>
            </thead>
            <tbody>
              <% @profissoes.each do |profissao| %>
                <tr>
                  <td><%= AreasProfissional.find(profissao.areas_profissional_id).area if !profissao.areas_profissional_id.nil? %></td>
                  <td><%= profissao.nome_profissao %></td>
                  <td><%= link_to '', profissao, :class => ' btn btn-primary fa fa-search', :title => 'Exibir' %></td>
                  <td><%= link_to '', edit_profissao_path(profissao), :class => 'btn btn-warning fa fa-edit', :title => 'Editar' %></td>
                  <td><%= link_to '', profissao, method: :delete, data: { confirm: 'Tem certeza?' }, :class => 'btn btn-danger fa fa-trash', :title => 'Deletar' %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>