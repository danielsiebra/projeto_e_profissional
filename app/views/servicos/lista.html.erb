<h1>Lista dos Servi√ßos</h1>

<table>
  <thead>
    <tr>
      <th>Preco</th>
      <th>Prazo</th>
      <th>Nome</th>
      <th>Profissional</th>
      <th>Registros servicos realizado</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @servicos.each do |servico| %>
      <tr>
        <td><%= servico.preco %></td>
        <td><%= servico.prazo %></td>
        <td><%= servico.nome %></td>
        <td><%= Profissional.find(servico.profissional_id).nome_completo if !servico.profissional_id.nil? %></td>
        <td><%= RegistrosServicosRealizado.find(servico.registros_servicos_realizado_id).nome_cliente if !servico.registros_servicos_realizado_id.nil? %></td>
        <td><%= link_to 'Show', servico %></td>
        <td><%= link_to 'Edit', edit_servico_path(servico) %></td>
        <td><%= link_to 'Destroy', servico, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

