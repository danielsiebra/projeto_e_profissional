<div class="loginscreen animated fadeInDown">
  <div class="row">
    <div class="col-md-6 col-md-push-3">
      <div class="ibox-content">
        <center><%= image_tag("logo.png") %></center>
        <div>
          <center><b>Inscrever-se</b></center> 

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>

            <div class="form-group">
              E-mail<e style="color:red">*</e>
              <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Digite seu e-mail" %>
            </div>
            <div class="form-group">
              Senha<e style="color:red">*</e> (De 6 a 24 caracteres)
              <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Digite sua senha", max: "24", min: "6" %>
            </div>
            <div class="form-group">
              Confirme sua senha<e style="color:red">*</e>
              <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "off", placeholder: "Digite sua senha novamente" %>
            </div>
            <div class="actions">
              <%= f.submit "Inscrever-se", class: "btn btn-primary block full-width m-b" %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
