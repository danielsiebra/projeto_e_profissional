<div class="loginscreen animated fadeInDown">
  <div class="row">
    <div class="col-md-6 col-md-push-3">
      <div class="ibox-content">
				<center><b>Esqueceu sua senha?</b></center>
				<br>
				<br>
				<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
				  <%= devise_error_messages! %>
				  <div class="form-group">
				    <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Digite seu e-mail" %>
				  </div>
				  <div class="actions">
				    <%= f.submit "Envie-me instruções para trocar de senha", class: "btn btn-default navbar-btn" %>
				  </div>
				<% end %>
				<%= render "devise/shared/links" %>
			</div>
		</div>
	</div>
</div>